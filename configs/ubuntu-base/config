#!/bin/sh

CONTAINER_NAME="$(basename $(dirname ${BASH_SOURCE[0]}))"
CONTAINER_OUTPUT="/u/containers/$CONTAINER_NAME"

# Embed into an initramfs
DO_EMBED=true

# Build an ISO for testing purposes
DO_GENERATE_ISO=true

DISTRO=trusty

PROFILE=ubuntu

# Sets up the default packages to install
PACKAGES="initramfs-tools,iproute2,net-tools,ifupdown,iputils-ping,bind9-host,ubuntu-minimal,ubuntu-standard"

# Extra packages to be installed after debootstrap
EXTRA_PACKAGES="openssh-server lvm2 parted mdadm curl netcat ca-certificates grub-pc vim dmidecode pciutils binutils util-linux"

EXCLUDE_PATTERN=()

# Packages to blacklist during debootstrap
BLACKLIST_PACKAGES=""

ADMIN_PUBKEY="ssh-rsa  dale.hamel@mainframe"

customize(){
  cexec apt-get install -y linux-generic-lts-vivid
}
