CONTAINER_NAME='cvisor'
CONTAINER_OUTPUT="/u/containers/$CONTAINER_NAME"
CONTAINER_SOURCE=

# Embed into an initramfs
EMBED=true

# Use wily to support lxd
DISTRO=wily

# Sets up the default packages to install
PACKAGES="lxc,lxd,lxd-client,openssh-server,initramfs-tools,live-boot" #overlayroot may not be needed

# Extra packages to be installed after debootstrap
EXTRA_PACKAGES="linux-firmware linux-image-3.19.0-31-generic"

# Packages to blacklist during debootstrap
BLACKLIST_PACKAGES="thermald" 
